<h1><%= @task.title %></h1>
<div>
  <%= link_to "Edit this task", edit_task_path %>
</div>

<div>
<p><%= @task.details %></p>
</div>

<div>
<% if @task.completed %>
  <i class="far fa-check-square">
  <%= "This task is completed" %>
  </i>
<% else %>
  <i class="far fa-square">
  <%= "This task is not completed yet" %>
  </i>
<% end %>
</div>

<div>
<%= link_to "Back to list", tasks_path %>
</div>
