<h1>My tasks</h1>
<% @tasks.each do |task|  %>
<ul>
  <li>
  <%= link_to task.title, task_path(task) %>
  <%= link_to ("<i class='fas fa-trash'> </i>").html_safe, task_path(task), :method=> :delete, data: { confirm: "Are you sure?" } %>
  </li>
</ul>
<% end %>

<div>
  <%= link_to "Add a new task", new_task_path %>
</div>
